# ============================================
# LithiumBuy Enterprise - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# REQUIRED - Database (Supabase)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# ============================================
# REQUIRED - Server Configuration
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# OPTIONAL - Perplexity Labs API (Market Intelligence)
# ============================================
PERPLEXITY_API_KEY=your_perplexity_api_key
PERPLEXITY_MODEL=sonar-pro

# ============================================
# OPTIONAL - Redis (Upstash) - For Job Queues
# ============================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ============================================
# OPTIONAL - Stripe - For Escrow Payments
# ============================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================
# OPTIONAL - Email Service (SMTP)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
SMTP_FROM=noreply@lithiumbuy.com

# ============================================
# OPTIONAL - Daily.co Video Service
# ============================================
DAILY_CO_API_KEY=your_daily_co_api_key

# ============================================
# OPTIONAL - Google Gemini AI
# ============================================
GEMINI_API_KEY=your_gemini_api_key

# ============================================
# OPTIONAL - Notion Integration (MCP)
# ============================================
NOTION_TOKEN=secret_your_notion_integration_token_here

# ============================================
# OPTIONAL - DocuSign
# ============================================
DOCUSIGN_CLIENT_ID=your_client_id
DOCUSIGN_CLIENT_SECRET=your_client_secret
DOCUSIGN_ACCOUNT_ID=your_account_id
DOCUSIGN_BASE_PATH=https://demo.docusign.net
DOCUSIGN_REDIRECT_URI=http://localhost:5000/api/docusign/callback

# ============================================
# OPTIONAL - Feature Flags
# ============================================
CONTENT_GENERATION_ENABLED=true
AUCTION_MARKETPLACE_ENABLED=true
PROCUREMENT_PLATFORM_ENABLED=true
